    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        
         String name=txtname.getText();
         String mobile=txtmob.getText();
         String gender =buttonGroup1.getSelection().toString();
         String dob= dc.getDateFormatString();
         String address=txtadd.getText();
         
         
         
         Connect();
        try {
            pst=con.prepareStatement("insert into reeg(name,mobile,gender,dob,address)values(?,?,?,?,?)");
            pst.setString(1,name);
            pst.setString(2,mobile);
            
            if(txtgenmal.isSelected()){
            gender="Male";
            
            }
            if(txtgenfem.isSelected()){

            gender="Female";
            
            }
            pst.setString(3,gender);
            
            
            SimpleDateFormat sdf=new SimpleDateFormat("yyyy-M-dd");
            String date=sdf.format(dc.getDate());
            pst.setString(4,date);
            
            if(checktcs.isSelected()){
                jButton1.requestFocus();

            }
            
            pst.setString(5,address);
            
            pst.executeUpdate();  
            
           JOptionPane.showMessageDialog(this,"User Inserted");
           
           txtname.setText("");
            txtmob.setText("");
             txtgenmal.setText("");
             txtgenfem.setText("");
             
              txtadd.setText("");
              txtname.requestFocus();
             reeg_table();             

           
           
           
        } catch (SQLException ex) {
            Logger.getLogger(Registration.class.getName()).log(Level.SEVERE, null, ex);
        }
         
        
    }                                        

    
    public void reeg_table(){
        
        Connect();
        try {
            pst=con.prepareStatement("select * from reeg");
            rs = pst.executeQuery();
            ResultSetMetaData Rsm =(ResultSetMetaData) rs.getMetaData();
            int c;
            c = Rsm.getColumnCount(); 
            DefaultTableModel df=(DefaultTableModel )jTable1.getModel();
            df.setRowCount(0);
            
            
            while(rs.next())
            {
                Vector v2= new Vector();
                
                for(int i=1; i<=c; i++ );
           {
            
            v2.add(rs.getString("name"));
            v2.add(rs.getString("mobile"));
            v2.add(rs.getString("gender"));
            v2.add(rs.getString("dob"));
            v2.add(rs.getString("address"));
            
            }
             
            df.addRow(v2);
            
            }
            
        } catch (SQLException ex) {
            Logger.getLogger(Registration.class.getName()).log(Level.SEVERE, null, ex);
        }
    
    
    
    
    }
    
    
    
